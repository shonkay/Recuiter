@model Data.Models.ChangePasswordVM

@{
    Layout = "~/Views/Shared/ProfileLayout.cshtml";
}

@{
    ViewBag.Title = "Change Password";
}

@*<h2>ChangePassword</h2>*@

<img src="~/Content/images/UserInterface.png" class="img-fluid topbanner mb-4" alt="user Interface">
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3" style="background-color: #fafafa;">
            <ul class="nav flex-column">
                <li class="nav-item border-bottom">
                    <a class="nav-link text-dark" href="#"><i class="fas fa-user mr-1"></i>My Profile</a>
                </li>
                <li class="nav-item border-bottom">
                    <a class="nav-link text-dark" href="#"><i class="fas fa-file-alt mr-1"></i>My Resume</a>
                </li>
                <li class="nav-item border-bottom">
                    <a class="nav-link text-dark" href="#"><i class="fas fa-clipboard mr-1"></i>Applied Jobs</a>
                </li>
                <li class="nav-item border-bottom">
                    <a class="nav-link text-dark" href="#"><i class="fas fa-bookmark mr-1"></i>Shortlisted Jobs</a>
                </li>
                <li class="nav-item  border-bottom" id="pass_change">
                    <a class="nav-link text-dark" href="#"><i class="fas fa-lock mr-1"></i>Change Password</a>
                </li>

            </ul>
        </div>

        <div class="col-sm-9">
            <h2>CHANGE PASSWORD</h2>
            <hr class="line">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.OldPassword)
                    <div>
                        @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "**********" } })
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.NewPassword)
                    <div>
                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "**********" } })
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.ConfirmPassword)
                    <div>
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "**********" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div style="display:flex;justify-content:space-between;">
                        <input type="submit" value="Update" class="btn btn-II" />
                    </div>
                </div>

                <div class="text-danger">
                    @ViewBag.Message
                </div>


            }
        </div>
    </div>
</div>





<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>