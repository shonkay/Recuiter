@model Data.Models.ResetPassword
@{
    ViewBag.Title = "ResetPassword";
}

@*<h2>Reset Password</h2>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @*<div class="text-danger">
            @ViewBag.Message
        </div>*@

    <div class="row mx-0">
        <div class="center_body col-sm-10 offset-sm-2">
            <div class="card w-75">
                <div class="card">
                    <h5 class="card-header">Enter New Password</h5>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.NewPassword)
                            <div>
                                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "**********" } })
                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.ConfirmPassword)
                            <div>
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "**********" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            @Html.HiddenFor(a => a.ResetCode)
                        </div>
                        <div class="form-group">
                            <div style="display:flex;justify-content:space-between;">
                                <input type="submit" value="Submit" class="btn btn-2 " />
                            </div>
                        </div>

                        <div class="text-danger">
                            @ViewBag.Message
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

